{
  "mcpServers": {
    "filesystem-server": {
      "command": "node",
      "args": [
        "src/mcp-servers/filesystem-server.js"
      ]
    },
    "github-server": {
      "command": "node",
      "args": [
        "src/mcp-servers/github-server/index.js"
      ]
    },
    "fetch-server": {
      "command": "node",
      "args": [
        "src/mcp-servers/fetch-server.js"
      ],
      "alwaysAllow": [
        "fetch_html"
      ]
    },
    "financial-modeling-server": {
      "command": "node",
      "args": [
        "src/mcp-servers/financial-modeling-server.js"
      ]
    },
    "market-analysis-server": {
      "command": "node",
      "args": [
        "src/mcp-servers/market-analysis-server.js"
      ]
    },
    "mindmap-server": {
      "command": "node",
      "args": [
        "src/mcp-servers/mindmap-server.js"
      ]
    },
    "technical-documentation-server": {
      "command": "node",
      "args": [
        "src/mcp-servers/technical-documentation-server.js"
      ],
      "alwaysAllow": [
        "generate_architecture_diagram",
        "generate_sequence_diagram"
      ]
    },
    "url-access": {
      "command": "node",
      "args": [
        "src/mcp-servers/ngrok-tunnel.js"
      ],
      "alwaysAllow": [
        "getUrls"
      ]
    }
  }
}